<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <!-- This section contains the log4net configuration settings -->
  <log4net>
    <!-- Define some output appenders -->
    <appender name="RollingLogFile" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="${PALS_LOG}\\SEDPlan.log" />
      <param name="AppendToFile" value="True" />
      <param name="DatePattern" value=".yyyyMMdd" />
      <param name="RollingStyle" value="Date" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d %-5p - %m%n" />
      </layout>
    </appender>
    <!-- Setup the root category, add the appenders and set the default level -->
    <root>
      <!-- Level value can be ALL, DEBUG, INFO, WARN, ERROR, FATAL, OFF -->
      <level value="ALL" />
      <appender-ref ref="RollingLogFile" />
    </root>
    <!-- Print only messages of level INFO or above in the PALS framework package -->
    <logger name="PALS.Net.Transports.TCP.TCPServer">
      <level value="ALL" />
    </logger>
    <logger name="PALS.Net.Transports.TCP.TCPClient">
      <level value="ALL" />
    </logger>
    <logger name="PALS.Net.Filters.Frame.Frame">
      <level value="ALL" />
    </logger>
    <logger name="PALS.Net.Filters.Application.AppServer">
      <level value="ALL" />
    </logger>
    <logger name="PALS.Net.Filters.Application.AppClient">
      <level value="ALL" />
    </logger>
    <logger name="PALS.Net.Common.SocketChannel">
      <level value="ALL" />
    </logger>
  </log4net>
  <connectionString>User ID=sa;Pwd=DBAdm1n@BHS.irel;Initial Catalog=SEDPLAN;Data Source=SG10031CSD6782;Packet Size=4096</connectionString>
  <sql-cmbx_SC_SAID>select distinct SA_ID from SA_Variable_Map</sql-cmbx_SC_SAID>
  <configSet name="SEDPlan.ExcelDataImport">
    <VariableType>L,LS,A°</VariableType>
    <SAComponent>
      <SCColumns>NAME,DESCRIPTION,LHS,RHS,PCE,VAR,WEIGHT (lbs/pce),REMARKS</SCColumns>
      <SCParameters>SAID,PARTSNAME,SPEC,LHS,RHS,PCE,VAR,WEIGHT,PROCESS,REVISION,CRTIME</SCParameters>
      <SCSTP>stp_ImportSCData</SCSTP>
    </SAComponent>
    
    <SAVariable>
      <SVColumns>L(Inches),LS(Inches),A(Degree),Weight(Ibs)</SVColumns>
      <SVParameters>SAID,L_para,LS_para,A_para,Weight,Revision,CRTIME</SVParameters>
      <SVSTP>stp_ImportSVData</SVSTP>
    </SAVariable>
    
    <BOMPlan>
      <BPColumns>SAID,Quantity,L,LS,A°</BPColumns>
      <BPParameters>PlanName,SAID,Quantity,L_para,LS_para,A_para,Revision,CRTIME</BPParameters>
      <BPSTP>stp_ImportBPData</BPSTP>
    </BOMPlan>
    
    <StandardParts>
      <STDColumns>NAME,DESCRIPTION,WEIGHT (lbs/pce)</STDColumns>
      <STDParameters>PartsName,Spec,STDWeight,Revision,CRTIME</STDParameters>
      <STDSTP>stp_ImportSTDData</STDSTP>
    </StandardParts>
  </configSet>
</configuration>